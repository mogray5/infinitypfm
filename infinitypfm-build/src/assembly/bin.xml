	<fileSets>
		<fileSet>
			<directory>appimage</directory>
			<outputDirectory>/infinitypfm.AppDir</outputDirectory>
			<includes>
				<include>AppRun</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>appimage</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>archive</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>create_archive.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>/infinitypfm.AppDir</outputDirectory>
			<includes>
				<include>infinitypfm.xpm</include>
				<include>infinitypfm.desktop</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>archive</directory>
			<outputDirectory>/infinitypfm.archive/bin</outputDirectory>
			<includes>
				<include>infinitypfm.bat</include>
				<include>infinitypfm.sh</include>
			</includes>
		</fileSet>
	</fileSets>
	
	<files>
		<file>
			<source>${env.SWT_LINUX}</source>
			<outputDirectory>/infinitypfm.AppDir/usr/lib</outputDirectory>
			<destName>swt_linux.jar</destName>
		</file>
		<file>
			<source>${env.SWT_LINUX}</source>
			<outputDirectory>/infinitypfm.archive/lib</outputDirectory>
			<destName>swt_linux.jar</destName>
		</file>
		<file>
			<source>${env.SWT_WINDOWS}</source>
			<outputDirectory>/infinitypfm.archive/lib</outputDirectory>
			<destName>swt_win.jar</destName>
		</file>
		<file>
			<source>/usr/share/java/json-lib-2.4.jar</source>
			<outputDirectory>/infinitypfm.AppDir/usr/lib</outputDirectory>
			<destName>json-lib-2.4.jar</destName>
		</file>
		<file>
			<source>/usr/share/java/json-lib-2.4.jar</source>
			<outputDirectory>/infinitypfm.archive/lib</outputDirectory>
			<destName>json-lib-2.4.jar</destName>
		</file>
	</files>

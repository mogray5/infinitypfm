<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Options">

	<select id="getAppVersion" resultType="java.lang.String">
   <![CDATA[
    SELECT
       AppVersion
    FROM AppSettings
    ]]>
	</select>

	<select id="getOptions" resultType="opt">
   <![CDATA[
    SELECT
       AppVersion,
       DefaultCurrencyID,
       CurrencyPrecision,
       ReportsInBrowswer,
       ConsoleDefaultOpen
    FROM AppSettings;
    ]]>
	</select>

	<update id="updateOptions" parameterType="opt">
		UPDATE AppSettings
		SET
		AppVersion = #appVersion#,
		DefaultCurrencyID = #defaultCurrencyID#,
		CurrencyPrecision = #currencyPrecision#,
		ReportsInBrowswer = #reportsInBrowswer#,
		ConsoleDefaultOpen = #consoleDefaultOpen#
	</update>

</mapper>
